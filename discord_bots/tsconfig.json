{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist/",
    "typeRoots": ["node_modules/@types", "./src/types"],
    "strict": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true, // Enable for better debugging
    "baseUrl": "./",
    "allowJs": true, // Allow JS files alongside TS
    "checkJs": false, // Don't type-check JS files to avoid compilation errors
    "paths": {
      // Configure path aliases
      "@commands*": ["./src/commands/*"],
      "@components*": ["./src/components/*"],
      "@structures*": ["./src/structures/*"],
      "@events*": ["./src/events/*"],
      "@modules*": ["./src/modules/*"],
      "@errors*": ["./src/errors/*", "./src/errors/index.js"],
      "@api*": ["./src/realm_api/*", "./src/realm_api/index.js"],
      "@constants*": ["./src/constants/*", "./src/constants/index.js"],
      "@utils*": ["./src/utils/*"],
      "@types*": ["./src/types/*", "./src/types/index.js"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "scripts"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "allowJs": true,
      "checkJs": false
    }
  }
}
